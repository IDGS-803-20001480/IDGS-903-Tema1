@model IDGS903_Tema1.Models.Traductor

@{
    ViewBag.Title = "RegistroPalabra";
}
<div class="row">
    <div class="col-6">
        <h2>RegistroPalabra</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Traductor</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.palabraEsp, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.palabraEsp, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.palabraEsp, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.palabraIng, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.palabraIng, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.palabraIng, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success"/>
                    </div>

                </div>
            </div>
        }

    <form method="get">
        <div class="col-md-offset-2 col-md-10">
            <input type="text" name="tabla" value="mostrar" hidden />
            <input type="submit" value="lista" class="btn btn-success" />
        </div>
    </form>

        <div>
            @Html.ActionLink("Buscar palabra", "BuscarPalabra")
        </div>
    </div>
    <div class="col-6">
        @if (ViewBag.tablaTraductor != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Ingles
                        </th>
                        <th>
                            Español
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.tablaTraductor)
                    {
                        Array datos = item.Split(',');

                        <tr>
                            <td>
                                @datos.GetValue(0).ToString()
                            </td>
                            <td> @datos.GetValue(1).ToString()</td>
                        </tr>

                    }
                </tbody>
                </table>
           }

    </div>

</div>

