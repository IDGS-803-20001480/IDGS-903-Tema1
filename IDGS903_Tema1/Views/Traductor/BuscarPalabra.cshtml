@model IDGS903_Tema1.Models.Traductor

@{
    ViewBag.Title = "BuscarPalabra";
}

<h2>BuscarPalabra</h2>
<div class="col-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Traductor</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.buscador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.buscador, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.buscador, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <input type="radio" id="esp" name="opc" value="Esp" required>
            <label for="esp">Español</label><br>
            <input type="radio" id="Ing" name="opc" value="Ing">
            <label for="Ing">Ingles</label><br>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>
        </div>
    </div>
    }
</div>
<div class="col-6">
    @if(ViewBag.respuesta != ""){
            <h3>@ViewBag.respuesta</h3>
            }
</div>


<div>
    @Html.ActionLink("Registro", "RegistroPalabra")
</div>
